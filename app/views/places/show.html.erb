<h1><%= @place["name"] %></h1>

<% if @current_user %>
  <h2>My Entries</h2>

  <% if @entries.any? %>
    <% for entry in @entries %>
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <p><%= entry["description"] %></p>
    <% end %>
  <% else %>
    <p>You haven't added any entries yet.</p>
  <% end %>

  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
  </p>
<% else %>
  <p>You must <a href="/login">log in</a> to see entries.</p>
<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>
